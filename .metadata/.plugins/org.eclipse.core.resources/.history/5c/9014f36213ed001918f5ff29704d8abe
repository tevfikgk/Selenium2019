package com.class7;

import java.util.Scanner;

public class WhileBooleanDayTime {

	public static void main(String[] args) {

		
		int day=1;
		boolean workday=true;
		while (workday) {
			if (day<=5) {
				System.out.println("I need a day off ");
			} else if (day>5 && day<=7)
			{System.out.println("I do not need a day off any more");
			}
		day+=1;
		}	
			
		
		
	}

}
