package com.class3;

public class ShorthandOperators {
	public  static void main (String [] arg) {
		int num=1000;
		num=num+1000;
		System.out.println(num);
		
		int num2=10;
		num2=num2-5;
		System.out.println(num2);
		
		int num3=1000;
		num3+=1000;
		System.out.println(num3);
		
		int num4=50;
		num4+=20;
		System.out.println();		
				
		num4-=50;
		System.out.println(num4);
		
		num4/=30;
		System.out.println(num4);
		
		//num4%=30;
		System.out.println(num4);
		
		
		
	}

}
